<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exampleproject1.NoInternetConnectionPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Source="wifi.png" HeightRequest="100" WidthRequest="100" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,50,0,0"></Image>

            <Label VerticalOptions="StartAndExpand" HorizontalOptions="Center" Margin="0,0,0,200" FontSize="20" FontAttributes="Bold">İnternet Bağlantınızı Kontrol Edin</Label>
            <Frame BackgroundColor="PaleVioletRed" HeightRequest="50" CornerRadius="10" VerticalOptions="StartAndExpand" HorizontalOptions="Center"
                   WidthRequest="200" Margin="0" Padding="0">
                <Label VerticalOptions="Center" HorizontalOptions="Center"  FontAttributes="Bold">Tekrar Deneyiniz</Label>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="networkControl">
                        
                    </TapGestureRecognizer>
                </Frame.GestureRecognizers>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>